@model IEnumerable<EcommerceApp.Core.ViewModels.BasketItemViewModel>

@{
    ViewBag.Title = "Basket";
}

<h2>Basket</h2>


<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quanity)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Line Total
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td><img style="height:50px" class="img" src="~/Content/ProductImages/@item.Image" /></td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quanity)
            </td>

            <td>
                @String.Format("{0:c}", item.Price)
            </td>
            <td>
                @String.Format("{0:c}", item.Price * item.Quanity)
            </td>
            <td>
                <a href="@Url.Action("RemoveFromBasket", "Basket", new { Id=item.Id })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    @{
        decimal bTotal = Decimal.Ceiling((from p in Model select p.Price * p.Quanity).Sum());
        
    }

    <tr>
        <td colspan="4" style="text-align:right"><strong>Basket Total</strong></td>
        <td>@String.Format("{0:c}", (from p in Model select p.Price * p.Quanity).Sum())</td>
        @{
            //string url = "https://www.sandbox.paypal.com/cgi-bin/webscr?cmd=_xclick&amount=" + (@bTotal) + "sb-wkdf25969220@business.example.com&item_name=Books_Items&return=https://localhost:44309/Basket/T0hankYou?OrderId=eb99adaf-c083-4d07-ba3c-2c5b0a643a84";
            string url = "https://www.sandbox.paypal.com/cgi-bin/webscr?cmd=_xclick&amount="+(bTotal)+ "&business=JanjuaTailors@Shop.com&item_name=Books&return=https://localhost:44309/Basket/T0hankYou?OrderId=eb99adaf-c083-4d07-ba3c-2c5b0a643a84";
        }
        @*<td><a href="@Url.Action("Checkout","Basket")">Checkout</a></td>*@
        <td><a href="@url">Checkout</a></td>
    </tr>


</table>
<form target="paypal" action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post">
    <input type="hidden" name="cmd" value="_s-xclick">
    <input type="hidden" name="hosted_button_id" value="KFCD29SC5LJSL">
    <input type="image" src="https://www.sandbox.paypal.com/en_US/i/btn/btn_cart_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
    <img alt="" border="0" src="https://www.sandbox.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1">
</form>

